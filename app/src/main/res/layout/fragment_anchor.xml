<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top"
        android:background="@color/color_blue_A400"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="200dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/ll_top2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/padding_margin_8dp"
        app:layout_anchor="@id/ll_top"
        app:cardCornerRadius="@dimen/padding_margin_4dp"
        app:layout_anchorGravity="bottom|end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:text="0 point"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/padding_margin_16dp"/>


    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>